<div class="container-fluid">
<div class="row">
<div class="col-md-6">


{{! http://www.ember-power-select.com/docs/how-to-use-it }}

  {{#power-select
      options=plans
      selected=selectedPlan
      onchange=(action "setPlan")
      as |plan|
    }}
    {{plan.name}}
  {{/power-select}}


  <div class="form-row">
    <label>
      <span>Discount Code</span>
      {{input value=discountCode }}
    </label>
  </div>

  <button id="check-completed" {{action "checkDiscount"}} class="btn btn-hg btn-embossed btn-block btn-primary" >
   Check code 
  </button>

<form class="form-horizontal" {{action "signup" on="submit"}}>

  <div class="form-row">
    <label>
      <span>Total</span>
      {{input value=total type="text" size="8" }}
    </label>
  </div>

<hr>

 <div class="form-row">
    <label>
      <span>First Name</span>
      {{input value=fname type="text" size="20"  }}
    </label>
  </div>
   <div class="form-row">
    <label>
      <span>Last Name</span>
      {{input value=lname type="text" size="20"  }}
    </label>
  </div>
     <div class="form-row">
    <label>
      <span>Email</span>
      {{input value=email type="text" size="20"  }}
    </label>
  </div>

<hr>

 <div class="form-row">
    <label>
      <span>Card Number</span>
      {{input value=number type="text" size="20" data-stripe="number"   }}
    </label>
  </div>

  <div class="form-row">
    <label>
      <span>CVC</span>
      {{input value=cvc type="text" size="4" data-stripe="cvc"}}
    </label>
  </div>

  <div class="form-row">
    <label>
      <span>Expiration (MM/YYYY)</span>
       {{input value=exp_month type="text" size="2" data-stripe="exp_month"}}
    <span> / </span>

    {{input value=exp_year type="text" size="2" data-stripe="exp_year"}}
    </label>
  </div>



<div class="controls">
  <button type="submit" class="btn btn-hg btn-embossed btn-block btn-primary" >Next thing</button>
</div>
 

</form>

{{#if loginFailed}}
  <div class="alert alert-danger">Invalid username or password.</div>
{{/if}}

  <h4>{{message}}</h4>

{{outlet}}

</div>
</div>
</div>
